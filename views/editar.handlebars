<div class="container text-center">
   
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
        <div class="col bg-white"><br>
            <p class="text-center fs-5">Editar - Agendamento de Potenciais Clientes</p>
            <p>
                <form action="/atualizar" method="POST">
                <input type="hidden" name="id" value="{{data.id}}" id="id">
                    <div class="mb-3 text-start">
                        <label class="form-label">Nome:</label>
                        <input type="name" name="nome" class="form-control" id="nome" value="{{data.nome}}">
                    </div>
                    <div class="mb-3 text-start">
                        <label class="form-label">Telefone:</label>
                        <input type="number" name="telefone" class="form-control" id="telefone" value="{{data.telefone}}">
                    </div>
                    <div class="mb-3 text-start">
                        <label class="form-label">Origem:</label>
                        <select name="origem" class="form-select" aria-label="Default select example" name="origem" id="origem">
                            <option {{#if (equals data.origem 'celular')}} selected {{/if}} value="celular" selected>Celular</option>
                            <option {{#if (equals data.origem 'whatsapp')}} selected {{/if}} value="whatsapp">Whatsapp</option>
                            <option {{#if (equals data.origem 'telefone_fixo')}} selected {{/if}} value="telefone_fixo">Telefone Fixo</option>
                        </select>
                    </div>
                    <div class="mb-3 text-start">
                        <label class="form-label">Data do Contato:</label>
                        <input type="date" name="data_contato" class="form-control" id="data_contato" aria-describedby="emailHelp" value="{{data.data_contato}}">
                    </div>
                    <div class="mb-3 text-start">
                        <label class="form-label">Observação:</label>
                        <textarea name="observacao" class="form-control" placeholder="" id="observacao" style="height: 100px">{{data.observacao}}</textarea>
                    </div>
                    <div class="mb-3 text-start">
                        <button type="submit" class="btn btn-primary">Editar</button>
                    </div>
                </form>
            </p>
        </div>
        <div class="col-1">
            &nbsp;
        </div>
    </div>
</div>